<script type="text/x-handlebars-template" id="resource-template">

<div class="container">

	<ul class="breadcrumb">
    <li><a href="#scheduler">{{pt "scheduler.title"}}</a></li>
    <li class="active">{{title}}</li>
	</ul>

  <div id="messages"></div>

  <table class="table table-striped table-hover">
    {{#each items}}
    <tr id={{id}}>
      <td class="{{id}}">{{name}}{{username}}</td>
      <td class="{{id}}">
        <button class="btn btn-default btn-xs item_button_remove"
          data-toggle="modal" data-target="#dialog-crud"><span
          class="glyphicon glyphicon-trash"></span>{{pt "button.delete"}}</button>
      </td>
      <td class="{{id}}">
        <button class="btn btn-default btn-xs item_button_edit"
          data-toggle="modal" data-target="#dialog-crud"><span
          class="glyphicon glyphicon-pencil"></span>{{pt "button.edit"}}</button>
      </td>
    </tr>
    {{/each}}
  </table>

	<div class="row">
    <div class="col-xs-12 col-md-3" >
      <ul class="nav nav-pills nav-stacked">
        <li><a href="#" class="btn btn-default btn-fab btn-add"
          data-status="active" data-toggle="modal"
          data-target="#dialog-crud" id="btn-add">
          <i class="material-icons">add_circle</i></a></li>
      </ul>
    </div>
	</div>

</div>

</script>
