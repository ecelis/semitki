<script type="text/x-handlebars-template" id="user-modal-edit">

  <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="dialog_label">{{pt "user.edit"}}</h4>
      </div>
      <div class="modal-body modal-body-default" style="padding-bottom: 0;">

      <form method="post" action="edit" role="form">
      <fieldset>
        {{#each item}}
        <div class="form-group">
          <label for="input_name">{{pt "generics.name"}}</label>
          <input type="text" name="fname" class="form-control" id="input_name" placeholder="{{pt "generics.name"}}" value="{{first_name}}">
        </div>

        <div class="form-group">
          <label  for="input_lname">{{pt "generics.lname"}}</label>
          <input type="text" name="lname" class="form-control" id="input_lastname" placeholder="{{pt "generics.lname"}}" value="{{last_name}}">
        </div>

        <div class="form-group">
          <label  for="input_email">{{pt "generics.email"}}</label>
          <input type="text" name="email" class="form-control" id="input_email" placeholder="{{generics.email}}" value="{{email}}">
        </div>

        <div class="form-group">
          <label  for="input_description">{{pt "user.username"}}</label>
          <input type="text" name="username" class="form-control" id="input_username" placeholder="{{pt "user.username"}}" value="{{username}}">
        </div>

        {{/each}}
        <div class="alert alert-danger errors-container" style="display: none;">
        </div>
        <div class="form-group">
           {{#each item}}
            <input type="hidden" id="user-id" value="{{id}}">
            <input type="hidden" id="user-name" value="{{username}}">
           {{/each}}
          <input  id="edit" type="button" class="btn btn-primary pull-left" value="{{pt "button.save"}}" data-loading-text="Saving...">
        </div>
      </fieldset>
      </form>

      </div>
      <div class="modal-footer">
        <div class="pull-right">
        </div>
      </div>
    </form>
  </div>

</script>
