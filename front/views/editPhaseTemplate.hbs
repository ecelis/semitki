<script type="text/x-handlebars-template" id="phase-modal-edit">

  <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="dialog_label">{{pt "phase.edit"}}</h4>
      </div>
      <div class="modal-body modal-body-default" style="padding-bottom: 0;">

      <form method="post" action="edit" role="form">
      <fieldset>

        <div class="form-group" id="phase-name">
          <label for="input_name">{{pt "generics.name"}}</label>
            <input type="text" name="name" class="form-control" id="input_name" placeholder="{{pt "generics.name"}}" value="{{item.name}}">
        </div>

        <div class="form-group">
          <label  for="input_description">{{pt "generics.description"}}</label>
            <input type="text" name="description" class="form-control" id="input_description" placeholder="{{pt "generics.description"}}" value="{{item.description}}">
        </div>

        <div class="alert alert-danger errors-container" style="display: none;">
        </div>

        <div class="form-group">
          <label for="campaign">{{pt "campaign.title"}}</label>
           <select class="form-control" id="campaign">
             {{#each campaigns}}
              <option value="{{id}}" {{ifCond id ../item}}>{{name}}</option>
             {{/each}}
           </select>
        </div>

        <div class="form-group">

          <input type="hidden" id="edit-id" value="{{item.id}}">
            <input id="edit" type="button" class="btn btn-primary pull-left" value="{{pt "button.save"}}" data-loading-text="Saving...">
        </div>

      </fieldset>
      </form>

      </div>
      <div class="modal-footer">
        <div class="pull-right">
        </div>
      </div>
    </form>
  </div>
</script>
